@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Joe's Pizza</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<br />

<div style="width:100%">

    <div class="card-group">
        <div class="card">
            <img class="card-img-top" src="https://st.depositphotos.com/1900347/4146/i/600/depositphotos_41466555-stock-photo-image-of-slice-of-pizza.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">FarmHouse Pizza</h5>
                <p class="card-text"> A pizza that goes ballistic on veggies! Check out this mouth watering overload of crunchy, crisp capsicum, succulent mushrooms and fresh tomatoes.</p>
                <p>Rs.189/-</p>
                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Create1">Order</a>
            </div>
        </div>
        <div class="card">
            <img class="card-img-top" src="https://st.depositphotos.com/1003814/5052/i/950/depositphotos_50523105-stock-photo-pizza-with-tomatoes.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Classic Margherita</h5>
                <p class="card-text">A hugely popular margherita, with a deliciously spreaded cheese and has tomato and basil toppings. You can never go wrong with a margherita!!</p>
                <p>Rs.120/-</p>
                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Create2">Order</a>
            </div>
        </div>
        <div class="card">
            <img class="card-img-top" style="height:inherit" src="https://img2.thejournal.ie/article/4741464/river/?height=400&version=4741504" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Joe's Special:Two Pizzas ;)</h5>
                <p class="card-text">Order a combo of you two favourite pizzas and make your day Joe Special!!</p>
                <p>Rs.499/-</p>
                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Create3 ">Order</a>
            </div>
        </div>
    </div>

</div>

<br />


